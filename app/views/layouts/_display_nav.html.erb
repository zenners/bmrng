<% if @album.user and @album.user.logo %>
<%= link_to image_tag(@album.user.logo.url(:thumb), class: 'nav_img'), @album.user.link, :target => "blank"%>
<%end %>
<span class="album_title">
  <%= @album.title %>
</span>

<span class="pull-right">
  <span class="faves_saves">
    <span class='heart'>
      <% if params[:faves] == "true" %>
        <%= link_to(image_tag('heart.png', width: 20) + " all", url_for())%>
      <% else %>
        <%= link_to(image_tag('red_heart.png', width: 20) + " fave", url_for(faves: true)) %>
      <% end %>
    </span>
      <%= link_to image_tag('cloud.png', width: 25) + " save", save_guests_path(album_id: @album.id) %>
  </span>
</span>