<%= link_to image_tag(@album.user.logo.url(:thumb), class: 'nav_img'), @album.user.link, :target => "blank"%>
<span class="album_title">
  <%= @album.title %>
</span>

<span class="pull-right">
  <% if params[:faves] == "true" %>
    <%= link_to(image_tag('x.png', width: 50) + " VIEW ALL", url_for())%>
  <% else %>
    <%= link_to(image_tag('heart.png', width: 50) + " VIEW FAVES", url_for(faves: true)) %>
  <% end %>
  <%= link_to image_tag('cloud.png', width: 50) + " SAVE", save_guests_path(album_id: @album.id) %>
</span>