<div class="row analytics_panel">
	<div class="row">
		<div class="span4">
			<div class="title_holder animated bounceIn">
				<span class="title animated bounceIn">MOST<br>VIEWED<br>SESSIONS</span>
			</div>
			<ul class="animated slideInLeft">
				<% @most_viewed_albums.active.each do |album| %>
					<li class="caps">
                      <span class='counter'><%= album.impressions.count || 0 %></span>
                      <span class='title'><%= link_to album.title, album %></span>
                    </li>
				<% end %>
			</ul>
		</div>
		<div class="span4">
			<div class="title_holder animated rotateInDownLeft">
				<span class="title">MOST<br>LIKED<br>PHOTOS</span>
			</div>
			<ul class="animated slideInLeft">
				<% @popular_pic_albums.each do |album| %>
                  <li class='caps'>
                    <span class='counter'><%= album.impressions.count || 0 %></span>
                    <span class='title'><%= link_to "#{album.title}", album %></title></span>
                  </li>
				<% end %>
			</ul>
		</div>
		<div class="span4">
			<div class="title_holder animated slideInDown">
				<span class="title animated bounceIn">DESKTOP<br>VS<br>MOBILE</span>
			</div>
			<div class="red_hoop animated slideInLeft"></div>
		</div>
	</div>
</div>